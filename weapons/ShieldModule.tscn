script/source = "extends Module

export var DAMAGE_MULTIPLIER := 0.3

var active = false

func _ready():
# warning-ignore:return_value_discarded
	$AnimationPlayer.connect(\"animation_finished\", self, \"_anim_finished\")
	
# warning-ignore:return_value_discarded
	player.connect(\"on_damage\", self, \"on_damage\")

func _unhandled_input(event):
	if event.is_action_pressed(\"alternative_shoot\"):
		get_parent().armor = DAMAGE_MULTIPLIER
		$AnimationPlayer.play(\"activate\")
		active = true
	elif event.is_action_released(\"alternative_shoot\"):
		get_parent().armor = 1.0
		$AnimationPlayer.play(\"deactivate\")
		active = false
		
func _anim_finished(anim):
	if anim == \"activate\":
		$AnimationPlayer.play(\"active\")

func on_damage(_dmg):
	if active:
		$FlashTween.interpolate_property($FlashSprite, \"modulate\", $FlashSprite.modulate, 
		Color(1, 1, 1, 1), 0.05)
		$FlashTween.interpolate_property($FlashSprite, \"modulate\", Color(1, 1, 1, 1), 
		Color(1, 1, 1, 0), 0.05, Tween.TRANS_LINEAR, 0, 0.05)
		$FlashTween.start()
"

