export var EFFECT_RAND_OFFSET := Vector2(10, 10)

var _shooting = false

func shoot():
	randomize()
	var offset = Vector2(
		rand_range(-EFFECT_RAND_OFFSET.x, EFFECT_RAND_OFFSET.x),
		rand_range(-EFFECT_RAND_OFFSET.y, EFFECT_RAND_OFFSET.y)		
		)
	var alpha = rand_range(0.35, 1.0)


	var effect: AnimatedSprite = $Effect.duplicate()
	get_tree().root.add_child(effect)
	effect.global_position = global_position + offset
	effect.visible = true
	effect.modulate = Color(1, 1, 1, alpha)
	effect.play()
"

