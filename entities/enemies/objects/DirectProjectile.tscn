script/source = "extends ProjectileUtil.Bullet

# Properties
var explode_on_wall: bool

var shot_from: Enemy

# Fields
var mv: Vector2

var has_hit = false
var enemies_hit = []


func _ready():
	# warning-ignore:return_value_discarded
	$AnimatedSprite.connect(\"animation_finished\", self, \"_on_anim_finished\")
	
	$HitboxArea.connect(\"body_entered\", self, \"_on_hit\")
	
	mv = Vector2(cos(angle), sin(angle)) * speed
	

func _physics_process(_delta):
	global_position += mv
	
	if explode_on_wall:
		for body in $HitboxArea.get_overlapping_bodies():
			if body is TileMap:
				has_hit = true
				on_explode()


func _on_hit(body):
	if body is Player:
		_on_player_hit()
		has_hit = true
		on_explode()
	
			
func on_explode():
	$AnimatedSprite.play(\"explode\")
	
	
func _on_player_hit():
	$\"/root/GameManager\".player.on_hit(damage)
	
func _on_anim_finished():
	if has_hit and $AnimatedSprite.animation == \"explode\":
		queue_free()
"

